<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<% @chatroom.messages.each do |message| %>
  <p><strong><%= message.user.username %></strong>&nbsp;:&nbsp;<%= message.body %></p>
<% end %>

<%= form_for [@chatroom, Message.new] do |f| %>
  <%= f.text_area :body, row: 1, class: 'form-control' %>
<% end %>
